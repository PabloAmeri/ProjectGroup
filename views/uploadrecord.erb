<!DOCTYPE html>
<html>
  <head>
    <title>
      Subir Acta | Sistema de Actas
    </title>
  </head>
    <div class="column-container">
    <!-------  seleccionar archivo   ------->
      <div class="column1">
        <form action="/sign_in" method="get" >
          <button class="button1">Cancelar</button>
        </form><br>
        <form id="form" class="button" action="/load" method="post" enctype="multipart/form-data">
          <input id="fpdf" type="file" name="pdf" value=""class="button" accept="application/pdf">
        </form>
      </div>
      <!--------   Previsualizar archivo   ----------->
      <div class="column2">
        <% if @filename %>
          <embed src="/temp/<%= @filename %>" type="application/pdf" width="100%" height="600px" />
        <% end %>
      </div>
      <!--------- Taggear y subir  --------->
      <div class="column1">
        <form class="button" action="/upload" method="post">
          <label for="fname">Fecha:</label><br>
          <input type="text" name="realtime" value="<%= @time %>" class="button"readonly><br>
          <label for="fname">Descripcion:</label><br>
          <input type="text" name="description" value="" class="button"><br>
          <label for="fname">NÂ° de Resolucion:</label><br>
          <input type="text" name="resolution" value="" class="button"><br>
          <input type="text" name="path" value ="<%= @filename %>" class="button" hidden>
          <input type="text" name="filena" value ="<%= @filename %>" class="button" readonly hidden><br>
          <input type="submit" value="Subir y Notificar"class="button1">
        </form>
      </div>
    </div>
  </html>
<script>
  document.getElementById("fpdf").onchange = function() {
    document.getElementById("form").submit();
  };
</script>
